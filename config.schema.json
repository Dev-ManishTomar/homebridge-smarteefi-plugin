{
  "pluginAlias": "Smarteefi-plugin",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "required": true,
        "default": "Smarteefi-plugin"
      },
      "userid": {
        "title": "Email ID",
        "type": "string",
        "required": true,
        "default": "",
        "description": "Your Smarteefi login Email ID."
      },
      "password": {
        "title": "Password",
        "type": "string",
        "required": true,
        "default": "",
        "description": "Your Smarteefi login password"
      },
      "refreshDelay": {
        "title": "Polling frequency for status refresh (milliseconds)",
        "type": "number",
        "required": true,
        "default": "60000",
        "description": "Polling frequency for status refresh (milliseconds)"
      },
      "commandGracePeriod": {
        "title": "Command Grace Period (milliseconds)",
        "type": "number",
        "required": false,
        "default": 3000,
        "description": "Time to wait after user commands before background refresh updates characteristics (prevents conflicts)"
      },
      "devices": {
        "title": "List of Smarteefi Devices",
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "device": {
              "type": "string",
              "title": "Device ID",
              "description": "Smarteefi Device ID",
              "required": true,
              "default": ""
            },
            "ip": {
              "type": "string",
              "title": "IP Address",
              "description": "IP address of Smarteefi Device",
              "required": true,
              "default": ""
            },
            "isFan": {
              "type": "boolean",
              "title": "Is FAN",
              "description": "Is this a FAN Switch?",
              "required": true,
              "default": false
            }
          }
        }
      },
      "local": {
        "title": "Local control if possible",
        "type": "boolean",
        "required": true,
        "default": false,
        "description": "Try UDP instead of TCP if possible"
      }
    }
  }
}